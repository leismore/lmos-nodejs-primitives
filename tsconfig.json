{
  "compilerOptions":
  {
    "lib":                          ["ES2023"],
    "target":                        "ES2023",
    "module":                        "nodenext",
    "moduleResolution":              "nodenext",
    "strict":                        true,
    "resolveJsonModule":             true,
    "declaration":                   true,
    "allowJs":                       false,
    "outDir":                        "dist",
    "paths": {
      "@lib/*":                ["./src/lib/*"],
      "@test/lib/*":           ["./test/lib/*"]
    }
  },
  "include":            ["src/**/*", "test/**/*"]
}
